<script>
let stage = 0;
const btn = document.getElementById("btn");
const flames = document.querySelectorAll(".flame");
const knife = document.getElementById("knife");
const leftCake = document.getElementById("leftCake");
const rightCake = document.getElementById("rightCake");
const plate = document.getElementById("plate");
const finalText = document.getElementById("finalText");
const confettiColors = ['#ff1493', '#ff69b4', '#ffa6c9', '#ffd700', '#ff6347', '#87ceeb', '#98fb98', '#dda0dd'];

function createConfetti() {
  const container = document.getElementById('confettiContainer');
  for (let i = 0; i < 50; i++) {
    const confetti = document.createElement('div');
    confetti.className = 'confetti';
    confetti.style.left = Math.random() * 100 + '%';
    confetti.style.backgroundColor = confettiColors[Math.floor(Math.random() * confettiColors.length)];
    confetti.style.animationDelay = Math.random() * 0.5 + 's';
    confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
    container.appendChild(confetti);
    setTimeout(() => confetti.classList.add('active'), 10);
  }
}

function createSparkles() {
  const container = document.getElementById('sparkleContainer');
  const sparkleEmojis = ['‚ú®', '‚≠ê', 'üåü', 'üí´', 'üéÜ', 'üéá', 'üíñ', 'üíï'];
  for (let i = 0; i < 40; i++) {
    const sparkle = document.createElement('div');
    sparkle.className = 'sparkle';
    sparkle.textContent = sparkleEmojis[Math.floor(Math.random() * sparkleEmojis.length)];
    sparkle.style.left = '50%';
    sparkle.style.top = '30%';
    const angle = (Math.PI * 2 * i) / 40;
    const distance = 100 + Math.random() * 150;
    sparkle.style.setProperty('--tx', Math.cos(angle) * distance + 'px');
    sparkle.style.setProperty('--ty', Math.sin(angle) * distance + 'px');
    sparkle.style.animationDelay = Math.random() * 0.3 + 's';
    container.appendChild(sparkle);
    setTimeout(() => sparkle.classList.add('active'), 10);
  }
}

function createHeartsRain() {
  const container = document.getElementById('heartsRain');
  const hearts = ['üíï', 'üíñ', 'üíó', 'üíù', 'üíì', 'üíû'];
  for (let i = 0; i < 20; i++) {
    setTimeout(() => {
      const heart = document.createElement('div');
      heart.className = 'falling-heart';
      heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
      heart.style.left = Math.random() * 100 + '%';
      heart.style.animationDuration = (3 + Math.random() * 2) + 's';
      heart.style.animationDelay = Math.random() * 2 + 's';
      container.appendChild(heart);
      setTimeout(() => heart.remove(), 6000);
    }, i * 300);
  }
}

btn.onclick = () => {
  if (stage === 0) {
    createSparkles();
    createConfetti();
    createHeartsRain();
    flames.forEach(f => f.style.display = "none");
    btn.textContent = "Now cut the cake! üî™üíï";
    stage++;
  } else if (stage === 1) {
    knife.style.top = "40px";
    setTimeout(() => {
      leftCake.style.transform = "translateX(-30px)";
      rightCake.style.transform = "translateX(30px)";
    }, 600);
    setTimeout(() => {
      plate.style.opacity = "1";
      leftCake.style.top = "90px";
      rightCake.style.top = "90px";
    }, 1200);
    setTimeout(() => {
      finalText.style.display = "block";
      createConfetti();
      createHeartsRain();
    }, 1800);
    btn.style.display = "none";
    stage++;
  }
};

// Intersection Observer for scroll animations
const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('visible');
      if (entry.target.id === 'finalSection') {
        createHeartsRain();
      }
    }
  });
}, { threshold: 0.2 });

observer.observe(document.getElementById('gallerySection'));
observer.observe(document.getElementById('poetrySection'));
observer.observe(document.getElementById('voiceSection'));
observer.observe(document.getElementById('finalSection'));

// File upload system
const audioPlayer = document.getElementById('audioPlayer');
const playBtn = document.getElementById('playBtn');
const waveform = document.getElementById('waveform');

window.addEventListener('DOMContentLoaded', () => {
  // Create hidden file inputs
  const audioInput = document.createElement('input');
  audioInput.type = 'file';
  audioInput.accept = 'audio/*';
  audioInput.id = 'hiddenAudioInput';
  audioInput.style.display = 'none';
  
  const photoInputs = [];
  for (let i = 1; i <= 4; i++) {
    const input = document.createElement('input');
    input.type = 'file';
    input.accept = 'image/*';
    input.id = `hiddenPhotoInput${i}`;
    input.style.display = 'none';
    photoInputs.push(input);
    document.body.appendChild(input);
  }
  
  const poetryInputs = [];
  for (let i = 1; i <= 3; i++) {
    const input = document.createElement('input');
    input.type = 'file';
    input.accept = 'image/*';
    input.id = `hiddenPoetryInput${i}`;
    input.style.display = 'none';
    poetryInputs.push(input);
    document.body.appendChild(input);
  }
  
  document.body.appendChild(audioInput);
  
  // Audio handler
  audioInput.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file) {
      const url = URL.createObjectURL(file);
      audioPlayer.src = url;
      playBtn.textContent = '‚ñ∂Ô∏è';
    }
  });
  
  // Photo handlers
  photoInputs.forEach((input, index) => {
    input.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (event) => {
          const placeholder = document.getElementById(`photo${index + 1}`);
          placeholder.innerHTML = `<img src="${event.target.result}" alt="Izma's photo ${index + 1}">`;
        };
        reader.readAsDataURL(file);
      }
    });
  });
  
  // Poetry handlers
  poetryInputs.forEach((input, index) => {
    input.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (event) => {
          const placeholder = document.getElementById(`poetry${index + 1}`);
          placeholder.innerHTML = `<img src="${event.target.result}" alt="Poetry ${index + 1}">`;
        };
        reader.readAsDataURL(file);
      }
    });
  });
  
  // Upload prompts
  setTimeout(() => {
    if (confirm('üíï Would you like to upload photos of the birthday girl? (You can upload 4 photos)')) {
      photoInputs[0].click();
      photoInputs[0].addEventListener('change', () => {
        setTimeout(() => photoInputs[1].click(), 500);
      }, { once: true });
      photoInputs[1].addEventListener('change', () => {
        setTimeout(() => photoInputs[2].click(), 500);
      }, { once: true });
      photoInputs[2].addEventListener('change', () => {
        setTimeout(() => photoInputs[3].click(), 500);
      }, { once: true });
    }
  }, 3000);
  
  setTimeout(() => {
    if (confirm('üìù Would you like to upload your poetry images? (You can upload 3 images)')) {
      poetryInputs[0].click();
      poetryInputs[0].addEventListener('change', () => {
        setTimeout(() => poetryInputs[1].click(), 500);
      }, { once: true });
      poetryInputs[1].addEventListener('change', () => {
        setTimeout(() => poetryInputs[2].click(), 500);
      }, { once: true });
    }
  }, 6000);
  
  setTimeout(() => {
    if (confirm('üé§ Would you like to upload your voice message for her?')) {
      audioInput.click();
    }
  }, 9000);
});

// Play button functionality
playBtn.addEventListener('click', () => {
  if (audioPlayer.src) {
    if (audioPlayer.paused) {
      audioPlayer.play();
      playBtn.textContent = '‚è∏Ô∏è';
      waveform.classList.remove('paused');
      waveform.classList.add('playing');
    } else {
      audioPlayer.pause();
      playBtn.textContent = '‚ñ∂Ô∏è';
      waveform.classList.remove('playing');
      waveform.classList.add('paused');
    }
  } else {
    alert('üíï Please upload your voice message first! The upload prompt will appear when you load the page.');
  }
});

audioPlayer.addEventListener('ended', () => {
  playBtn.textContent = '‚ñ∂Ô∏è';
  waveform.classList.remove('playing');
  waveform.classList.add('paused');
});

// Continuous hearts rain
setInterval(() => {
  if (Math.random() > 0.7) {
    const container = document.getElementById('heartsRain');
    const hearts = ['üíï', 'üíñ', 'üíó', 'üíù', 'üíì', 'üíû'];
    const heart = document.createElement('div');
    heart.className = 'falling-heart';
    heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
    heart.style.left = Math.random() * 100 + '%';
    heart.style.animationDuration = (3 + Math.random() * 2) + 's';
    container.appendChild(heart);
    setTimeout(() => heart.remove(), 6000);
  }
}, 2000);
</script>
</body>
</html>
